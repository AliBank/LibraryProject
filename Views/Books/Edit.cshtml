@{
}

@model LibraryAppWeb.Models.Entities.Book

<h1>Edit Book</h1>

@if (Model is null)
{
    <p>No book was found with this BookId</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Book Id</label>
            <input type="text" class="form-control" asp-for="BookId" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" asp-for="Title" />
        </div>

        <div class="mt-3">
            <label class="form-label">Author</label>
            <input type="text" class="form-control" asp-for="Author" />
        </div>

        <div class="mt-3">
            <label class="form-label">PublishedYear</label>
            <input type="text" class="form-control" asp-for="PublishedYear" />
        </div>

        <div class="mt-3">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" asp-for="Genre" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
}

